# Configuração de Produção VPS - PII Detector DataFog
# Copie este arquivo para .env e configure os valores

# === AMBIENTE ===
NODE_ENV=production
PORT=5000

# === DATABASE POSTGRESQL ===
DATABASE_URL=postgresql://datafog:SUA_SENHA_AQUI@localhost/pii_detector
PGUSER=datafog
PGPASSWORD=SUA_SENHA_AQUI
PGDATABASE=pii_detector
PGHOST=localhost
PGPORT=5432

# === REDIS ===
REDIS_URL=redis://localhost:6379

# === SEGURANÇA ===
# Gere chaves seguras com: openssl rand -base64 32
SESSION_SECRET=GERAR_CHAVE_256_BITS_AQUI
JWT_SECRET=GERAR_JWT_SECRET_AQUI

# === UPLOADS ===
UPLOAD_DIR=/home/datafog/uploads
MAX_FILE_SIZE=104857600
MAX_FILES_PER_UPLOAD=10
ALLOWED_EXTENSIONS=pdf,doc,docx,xls,xlsx,txt,csv,xml

# === SFTP ===
SFTP_ENABLED=true
SFTP_DIR=/home/datafog/uploads/sftp
SFTP_INCOMING=/home/datafog/uploads/sftp/incoming
SFTP_PROCESSED=/home/datafog/uploads/sftp/processed
SFTP_QUARANTINE=/home/datafog/uploads/sftp/quarantine

# === PROCESSAMENTO ===
MAX_CONCURRENT_JOBS=5
PROCESSING_TIMEOUT_MS=300000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# === LOGS ===
LOG_LEVEL=info
LOG_DIR=/var/log/pii-detector

# === OPENAI (OPCIONAL) ===
# Para análise semântica avançada
OPENAI_API_KEY=

# === EMAIL (OPCIONAL) ===
# Para notificações
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@seudominio.com

# === MONITORAMENTO ===
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# === BACKUP ===
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30